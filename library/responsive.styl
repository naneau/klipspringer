/******************************************************************************

     RESPONSIVE @MEDIA QUERIES

     Because of shortcomings in Stylus it's not possible to put @media rules
     inside of selectors.

     This file sets up a set of reasonable defaults variables that can be used
     after an @media selector:

     @media media-screen-tablet-portrait
         .foo
            background-color: pink

     @media media-screen-smaller-than-tablet-portrait
         .foo
            background-color: red

******************************************************************************/

// Default widths are based on Apple's phones and tablets
media-tablet-landscape-width ?= 1024px
media-tablet-portrait-width  ?= 768px

media-phone-landscape-width  ?= 480px
media-phone-portrait-width   ?= 320px

// Tablet in landscape mode
media-screen-tablet-landscape              = media-screen-min(media-tablet-landscape-width)
media-screen-bigger-than-tablet-landscape  = media-screen-min(media-tablet-landscape-width)
media-screen-bigger-than-tablet            = media-screen-bigger-than-tablet-landscape
media-screen-smaller-than-tablet-landscape = media-screen-max(media-tablet-landscape-width)

// Tablet in portrait
media-screen-tablet-portrait               = media-screen-min-max(media-tablet-portrait-width, media-tablet-landscape-width)
media-screen-bigger-than-tablet-portrait   = media-screen-min(media-tablet-portrait-width)
media-screen-smaller-than-tablet-portrait  = media-screen-max(media-tablet-portrait-width)
media-screen-smaller-than-tablet           = media-screen-smaller-than-tablet-portrait

// Phone in portrait
media-screen-phone-landscape               = media-screen-min-max(media-phone-landscape-width, media-tablet-landscape-width)
media-screen-smaller-than-phone-landscape  = media-screen-max(media-phone-landscape-width)
media-screen-phone-portrait                = media-screen-min-max(media-phone-landscape-width, media-phone-landscape-width)
media-screen-bigger-than-phone-portrait    = media-screen-min(media-phone-portrait-width)

// Print
mediaPrint                                 = "print"

// Combine two media rules
media-and(rule1, rule2)
    "(" + rule1 + ") and (" + rule2 + ")"

// Screen rule with a min-width
media-screen-min(min)
    "screen and (min-width: " + (min) + ")"

// Screen rul with a max-width
media-screen-max(max)
    "screen and (max-width: " + (max - 1px) + ")"

// Screen rule a min-width combined with a max-width
// Max is reduced by one pixel to make it easy to create ranges
media-screen-min-max(min, max)
    "screen and (min-width: " + min + ") and (max-width: " + (max - 1px) + ")"

